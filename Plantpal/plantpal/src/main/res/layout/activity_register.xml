<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FDD7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ВПЕРВЫЕ У НАС?"
            android:textColor="#2D4223"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:text="Мы уже подготавливаем твой уголок"
            android:textColor="#2D4223"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2D4223"
            android:hint="Электронная почта"
            android:inputType="textEmailAddress"
            android:textColor="#2D4223" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="316dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2D4223"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="#2D4223" />

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="316dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2D4223"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:textColor="#2D4223" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2D4223"
            android:hint="Как вас называть?"
            android:textColor="#2D4223"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2D4223"
            android:hint="Придумайте никнейм"
            android:textColor="#2D4223"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#D5E8A3"
            android:text="Регистрация"
            android:textAllCaps="false"
            android:textColor="#2D4223" />

        <Button
            android:id="@+id/buttonGoToLogin"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#CBE6A3"
            android:text="Уже есть аккаунт?"
            android:textAllCaps="false"
            android:textColor="#2D4223" />

    </LinearLayout>
</ScrollView>
