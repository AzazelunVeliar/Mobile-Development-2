<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FDD7"
    android:padding="32dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:text="С ВОЗВРАЩЕНИЕМ!"
        android:textColor="#2D4223"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Растения соскучились по вам."
        android:textColor="#2D4223"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="345dp"
        android:layout_height="62dp"
        android:backgroundTint="#2D4223"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#2D4223" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="347dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2D4223"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="#2D4223" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="323dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#D5E8A3"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColor="#2D4223" />

    <Button
        android:id="@+id/buttonGoToRegister"
        android:layout_width="323dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#CBE6A3"
        android:text="Создать аккаунт"
        android:textAllCaps="false"
        android:textColor="#2D4223" />
</LinearLayout>
